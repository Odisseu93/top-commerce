{
  "compilerOptions": {
    "module": "NodeNext",                               
    "moduleResolution": "NodeNext",
    "target": "ES2022",                                 
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                      
    "skipLibCheck": true,    
    "resolveJsonModule": true                 
  },
  "include": ["src/**/*"]
}
